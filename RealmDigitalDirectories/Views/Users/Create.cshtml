@model RealmDigitalDirectories.Models.User

@{
  ViewData["Title"] = "Create";
  Layout = "~/Views/Shared/_Layout.cshtml";
}


<h1><i class="fas fa-users"></i> <a asp-action="Index"> User </a> > Create</h1>
<hr />

<div class="card shadow" style="min-height: 400px;">
  <div class="card-header py-3">
    <h6 style="display:inline" class="m-0 font-weight-bold text-primary">User Information</h6>
  </div>
  <div class="card-body">
    <div class="row">
      <div class="col-md-12">
        <form asp-action="Create">
          <div asp-validation-summary="ModelOnly" class="text-danger"></div>
          <div class="form-group">
            <label asp-for="FullName" class="control-label"></label>
            <input asp-for="FullName" class="form-control" />
            <span asp-validation-for="FullName" class="text-danger"></span>
          </div>
          <div class="form-group">
            <label asp-for="Email" class="control-label"></label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
          </div>
          <div class="form-group">
            <label asp-for="PhoneNumber" class="control-label"></label>
            <input asp-for="PhoneNumber" class="form-control" />
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
          </div>
          <div class="form-group">
            <label asp-for="Description" class="control-label"></label>
            <input asp-for="Description" class="form-control" />
            <span asp-validation-for="Description" class="text-danger"></span>
          </div>
          <div class="form-group">
            <input type="submit" value="Create" class="btn btn-primary" />

            <a asp-controller="Users" asp-action="Index" class=" btn btn-primary ">
              <span class=" glyphicon glyphicon-arrow-left">
              </span>  <span>Back to List</span>
            </a>
          </div>
        </form>
      </div>
    </div>
    </div>
  </div>



    @section Scripts {
      @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
