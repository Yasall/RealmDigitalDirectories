@model RealmDigitalDirectories.Models.User

@{
  ViewData["Title"] = "Details";
}

<h1><i class="fas fa-users"></i> Users Information > <a asp-action="Index"> Users </a> > Details: @Model.FullName</h1>
<hr />
<div>
  <div class="card shadow" style="min-height: 400px;">
    <div class="card-header py-3">
      <h6 style="display:inline" class="m-0 font-weight-bold text-primary">User Information</h6>
    </div>
    <div class="card-body">
      <div class="form-group">
        <label asp-for="FullName" class="control-label">Full Name</label>
        <input asp-for="FullName" class="form-control" disabled />
        <span asp-validation-for="FullName" class="text-danger"></span>
      </div>
      <div class="form-group">
        <label asp-for="Email" class="control-label">Email</label>
        <input asp-for="Email" class="form-control" disabled />
        <span asp-validation-for="Email" class="text-danger"></span>
      </div>
      <div class="form-group">
        <label asp-for="PhoneNumber" class="control-label">Phone Number</label>
        <input asp-for="PhoneNumber" class="form-control" disabled />
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
      </div>
      <div class="form-group">
        <label asp-for="Description" class="control-label">Description</label>
        <input asp-for="Description" class="form-control" disabled />
        <span asp-validation-for="Description" class="text-danger"></span>
      </div>
      <div>
      </div>
    </div>
  </div>
</div>
<br />
<div>
  <a asp-action="Edit" asp-route-id="@Model.Id" class=" btn btn-primary">Edit</a>


  <a asp-controller="Users" asp-action="Index" class=" btn btn-primary ">
    <span class=" glyphicon glyphicon-arrow-left">
    </span>  <span>Back to List</span>
  </a>
</div>
